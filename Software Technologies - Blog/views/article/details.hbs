<div class="container body-content">
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-12">
                <article>
                    <header class="text-primary">
                        <h2>{{title}}</h2>
                    </header>

                    <p>
                        {{content}}
                    </p>

                    <small class="text-success">
                        {{author.fullName}}
                    </small>

                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-success" href="/article/edit/{{id}}">Edit &raquo;</a>
                            <a class="btn btn-danger" href="/article/delete/{{id}}">Delete &raquo;</a>
                            <a class="btn btn-primary" href="/">Back &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        </div>
    </div>
</div>
